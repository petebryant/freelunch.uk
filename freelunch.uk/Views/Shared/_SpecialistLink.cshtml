@{
    string _userid = @User.Identity.GetUserId();
}

@using Microsoft.AspNet.Identity
@using freelunch.uk.Common

@if (Functions.IsSpecialist(_userid))
{
    @Html.ActionLink("We know you're special", "Index", "Specialist", null, htmlAttributes: new { @style = "text-decoration: none" })
}
else
{
    @Html.ActionLink("Become a specialist", "Create", "Specialist", null, htmlAttributes: new { @style = "text-decoration: none" })
}

