@{

    string _userid = @User.Identity.GetUserId();
}

@using Microsoft.AspNet.Identity
@using freelunch.uk.Common

<div class="row">
    <div class="col-md-12">
        <p>
            @if (Functions.IsSpecialist(_userid))
            {
                @Html.ActionLink("We already know you're special", "Index", "Specialist", null, htmlAttributes: new { @style = "text-decoration: none" })
            }
            else
            {

                <a class="btn btn-default" href="/Specialist/Create" role="button">
                    <i class="fa fa-user" aria-hidden="true" title="Become a specialist"></i> Become a specialist
                </a>

            }
        </p>
    </div>
</div>
