@model freelunch.uk.Models.SpecialistViewModel
@{
    ViewBag.Title = "Websites, blogs and social media etc...";
}

<div class="row">
    <h4>Links to websites, blogs and social media 
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#addTarget">
            <span class="glyphicon glyphicon-plus" aria-hidden="true" title="Add"></span>
        </button>
    </h4>
    
    <hr />
    @foreach (var link in Model.Links)
    {
        string iClass = "";
        string editTarget = "edit" + link.Id;
        string deleteTarget = "delete" + link.Id;

        switch (link.LinkType)
        {
            case freelunch.uk.Models.LinkType.Facebook:
                iClass = "fa fa-facebook";
                break;
            case freelunch.uk.Models.LinkType.GitHub:
                iClass = "fa fa-github";
                break;
            case freelunch.uk.Models.LinkType.LinkedIn:
                iClass = "fa fa-linkedin";
                break;
            case freelunch.uk.Models.LinkType.Twitter:
                iClass = "fa fa-twitter";
                break;
            default:
                iClass = "fa fa-book";
                break;
        }
        <div class="row">
            <div class="col-md-8">
                <i class="fa @iClass" aria-hidden="true"></i>
                <a href="@link.URL" style="text-decoration: none" title="@link.Text" target="_blank"> @link.Text</a>
            </div>
            <div class="col-md-4"> 
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@editTarget">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit"> </span>
                </button>
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#@deleteTarget">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"> </span>
                </button>
            </div>

            <div id="@editTarget" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">@ViewBag.Title</h4>
                        </div>
                        <p></p>
                        <section id="loginForm">
                            @using (Html.BeginForm("EditLink", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(m => m.Links.First(l => l.Id == link.Id).Id)
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Links.First(l => l.Id == link.Id).Text, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Links.First(l => l.Id == link.Id).Text, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Links.First(l => l.Id == link.Id).Text, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Links.First(l => l.Id == link.Id).URL, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Links.First(l => l.Id == link.Id).URL, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Links.First(l => l.Id == link.Id).URL, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Links.First(l => l.Id == link.Id).LinkType, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">   
                                        @Html.EnumDropDownListFor(m => m.Links.First(l => l.Id == link.Id).LinkType, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Links.First(l => l.Id == link.Id).LinkType, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            }
                        </section>
                </div>

                </div>
            </div>

            <div id="@deleteTarget" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">@ViewBag.Title</h4>
                        </div>
                        <p></p>
                        <section id="loginForm">
                            @using (Html.BeginForm("DeleteLink", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })                                   
                                @Html.HiddenFor(m => m.Links.First(l => l.Id == link.Id).Id)

                                <div class="form-group">
                                    <div class="col-md-10 col-md-offset-2">
                                        Delete your link <b>@link.Text</b> to <b>@link.URL</b> ?
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <input type="submit" value="Delete" class="btn btn-default" />
                                </div>
                            }
                        </section>
                    </div>

                </div>
            </div>
        </div>
    }

    <div id="addTarget" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">@ViewBag.Title</h4>
                </div>
                <p></p>
                <section id="loginForm">
                    @using (Html.BeginForm("CreateLink", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(m => m.UserId);
                        <div class="form-group">
                            @Html.LabelFor(m => m.DummyLink.Text, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.DummyLink.Text, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.DummyLink.Text, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.DummyLink.URL, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.DummyLink.URL, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.DummyLink.URL, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.DummyLink.LinkType, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.EnumDropDownListFor(m => m.DummyLink.LinkType, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.DummyLink.LinkType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    }
                </section>
            </div>

        </div>
    </div>

</div>


