@model freelunch.uk.Models.SpecialistViewModel
@{
    ViewBag.Title = "Specialist";
}

<div class="well well-lg">
    <h2>@ViewBag.Title.</h2>
    <br />

    <div>
        As a specialist you have the chance of sharing your knowledge of a subject you are passionate about.
    </div>
</div>

<div>
    <div id="toolbar" class="row">
        @if (Model.Name != null)
        {
            <div class="col-md-4">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#editSpecialist">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit"></span> Edit
                </button>

                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteSpecialist">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete"></span> Delete
                </button>

                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        More <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#" data-toggle="modal" data-target="#addSubject">Add a Specialist subject</a></li>
                        <li><a href="#" data-toggle="modal" data-target="#addLink">Add a Links to...</a></li>
                    </ul>
                </div>
            </div>

            <div id="deleteSpecialist" class="modal fade" role="dialog" tabindex='-1'>
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close close-button" data-dismiss="modal">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                            </button>
                            <h4 class="modal-title">Delete the details</h4>
                        </div>
                        <p></p>
                        <section id="deleteForm">
                            @using (Html.BeginForm("Delete", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="modal-body">
                                    <p> Are you sure you no longer want to be special?</p>
                                </div>

                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-default">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                                    </button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Cancel
                                    </button>
                                </div>
                            }
                        </section>
                    </div>

                </div>
            </div>

            <div id="editSpecialist" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close close-button" data-dismiss="modal">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                            </button>
                            <h4 class="modal-title">Edit the details</h4>
                        </div>
                        <p></p>
                        <section id="editForm">
                            @using (Html.BeginForm("Edit", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="modal-body">
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name, new { @class = "col-md-3 col-md-offset-1 control-label" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Description, new { @class = "col-md-3 col-md-offset-1 control-label" })
                                        <div class="col-md-7">
                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                            <span class="help-block">Say something about yourself.</span>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-default">
                                            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
                                        </button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">
                                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Cancel
                                        </button>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>

                </div>
            </div>


            <div id="addLink" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close close-button" data-dismiss="modal">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                            </button>
                            <h4 class="modal-title">Add a link</h4>
                        </div>
                        <p></p>
                        <section id="addForm">
                            @using (Html.BeginForm("CreateLink", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="modal-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DummyLink.Text, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.DummyLink.Text, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DummyLink.Text, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DummyLink.URL, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.DummyLink.URL, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DummyLink.URL, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-6 col-md-offset-2">
                                                <div class="panel panel-default">
                                                    <div class="panel-heading">Select the type of link</div>
                                                    <div class="panel-body">
                                                        @foreach (var linkType in Enum.GetValues(typeof(freelunch.uk.Models.LinkType)))
                                                        {
                                                            string type = linkType.ToString();
                                                            string id = "add" + linkType.ToString();
                                                            <p>
                                                                @Html.RadioButtonFor(m => m.DummyLink.LinkType, @linkType, new { id = @id })
                                                                <label for="@id" class="control-label"> @type </label>
                                                            </p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="help-tip">
                                        <p>Provide links to your online presence, this may be a blog, websites, github repositories etc.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-default">
                                            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
                                        </button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">
                                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Cancel
                                        </button>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>

            <div id="addSubject" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close close-button" data-dismiss="modal">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                            </button>
                            <h4 class="modal-title">Add a subject</h4>
                        </div>
                        <p></p>
                        <section id="addForm">
                            @using (Html.BeginForm("CreateSubject", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="modal-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DummySpecialism.Subject, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.DummySpecialism.Subject, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DummySpecialism.Subject, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.DummySpecialism.Description, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(m => m.DummySpecialism.Description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.DummySpecialism.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="help-tip">
                                        <p>Give details of a topic that you would like to discuss over lunch.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-default">
                                            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
                                        </button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">
                                            <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Cancel
                                        </button>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-2">
                <button type="button" class="btn btn-default" data-toggle="modal" data-target="#createSpecialist">
                    <i class="fa fa-user" aria-hidden="true" title="Become a specialist"></i> Become a specialist
                </button>
            </div>

            <div id="createSpecialist" class="modal fade" role="dialog">
                <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close close-button" data-dismiss="modal">
                                <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
                            </button>
                            <h4 class="modal-title">Create your details</h4>
                        </div>
                        <p></p>
                        <section id="createForm">
                            @using (Html.BeginForm("Create", "Specialist", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                <div class="modal-body">
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-7">
                                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                            <span class="help-block">Say something about yourself.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-default">
                                        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
                                    </button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">
                                        <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> Cancel
                                    </button>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        }

        <p class="text-success">@ViewBag.StatusMessage</p>
    </div>

    <hr/>

    <div class="row ">
        <div class="col-md-10">
            @if (Model.Name != null)
            {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                @Model.Name
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                @Model.Description
            </div>
            }
        </div>
    </div>
</div>

<br/>
<hr/>
<br/>

<ul class="nav nav-tabs">
    @if (ViewBag.Tab ==0)
    { 
    <li class="active">
        <a href="#subjects" data-toggle="tab">Specialist subjects</a>
    </li>
    <li>
        <a data-toggle="tab" href="#links">Links to websites, blogs and social media</a>
    </li>
    }
    else
    { 
    <li>
        <a href="#subjects" data-toggle="tab">Specialist subjects</a>
    </li>
    <li class="active">
        <a data-toggle="tab" href="#links">Links to websites, blogs and social media</a>
    </li>
    }
</ul>


<div class="tab-content">
    @if (ViewBag.Tab ==0)
    {
    <div id="subjects" class="tab-pane fade in active">
        <br/>
        @Html.Partial("_Subjects")
    </div>

    <div id="links" class="tab-pane fade">
        <br/>
        @Html.Partial("_Links")
    </div>
    }
    else
    {
        <div id="subjects" class="tab-pane fade">
            <br />
            @Html.Partial("_Subjects")
        </div>

        <div id="links" class="tab-pane fade in active">
            <br />
            @Html.Partial("_Links")
        </div>
    }
</div>



