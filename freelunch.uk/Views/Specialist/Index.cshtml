@model freelunch.uk.Models.SpecialistViewModel
@{
    ViewBag.Title = "Specialist";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <h4>Your specialist details</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            @if (Model.Name != null)
            {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                @Model.Name
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                @Model.Description
            </div>
            }
            else
            {
                @Html.ActionLink("Become a specialist", "Create", "Specialist")
            }
        </div>
        <div class="col-md-4">
            @if (Model.Name != null)
            {
                <div>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#editSpecialist">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Edit these details"></span>
                    </button>

                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteSpecialist">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Delete these details"></span>
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<div id="deleteSpecialist" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <p></p>
            <section id="loginForm">
                @using (Html.BeginForm("Delete", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            Are you sure you no longer want to be special?
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-default">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                        </button>
                    </div>
                }
            </section>
        </div>

    </div>
</div>

<div id="editSpecialist" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ViewBag.Title</h4>
            </div>
            <p></p>
            <section id="loginForm">
                @using (Html.BeginForm("Edit", "Specialist", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-3 col-md-offset-1 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-md-3 col-md-offset-1 control-label" })
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-default">
                            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save
                        </button>
                    </div>
                }
            </section>
        </div>

    </div>
</div>

<p>
@Html.Partial("_Links")
</p>